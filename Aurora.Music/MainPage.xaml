                        <Button Style="{ThemeResource MainPageRoundButton}" Command="{x:Bind Context.PlayPause}"
                                Width="48" Height="48" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                            <Button.Content>
                                <SymbolIcon Symbol="{x:Bind NullableBoolToSymbol(Context.IsPlaying), Mode=OneWay}"/>
                            </Button.Content>
                        </Button>
                        <Button Style="{ThemeResource MainPageRoundButton}" Command="{x:Bind Context.GoNext}" IsHoldingEnabled="True"
                                Holding="FastFoward_Holding"
                                Width="48" Height="48" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                            <Button.Content>
                                <SymbolIcon Symbol="Next"/>
                            </Button.Content>
                        </Button>

                        <ToggleButton Style="{ThemeResource MainPageRoundToggleButton}" IsChecked="{x:Bind Context.IsShuffle, Mode=TwoWay}"
                                      Width="48" Height="48" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                            <ToggleButton.Content>
                                <SymbolIcon Symbol="Shuffle"/>
                            </ToggleButton.Content>
                        </ToggleButton>

                        <ToggleButton Style="{ThemeResource MainPageRoundToggleButton}" IsChecked="{x:Bind Context.IsLoop, Mode=TwoWay}"
                                      Width="48" Height="48" Margin="4" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                            <ToggleButton.Content>
                                <SymbolIcon Symbol="Refresh"/>
                            </ToggleButton.Content>
                        </ToggleButton>
                    </StackPanel>
                    <ProgressBar Background="{x:Null}" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="5" 
                                 Value="{x:Bind PositionToValue(Context.CurrentPosition, Context.TotalDuration), Mode=OneWay}"/>
                </Grid>

                <Button Style="{ThemeResource MainPageHamStyle}" Background="Transparent"
                        HorizontalAlignment="Left" VerticalAlignment="Top" Click="Toggle_PaneOpened"
                        Margin="0,32,0,0" Width="48" Height="48">
                    <Button.Content>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE700;" />
                    </Button.Content>
                </Button>
                <Grid Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                      Height="32" x:Name="TitleBar" >
                    <TextBlock Text="Aurora Music" Style="{ThemeResource CaptionTextBlockStyle}" 
                               Margin="56,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" 
                               Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                </Grid>
            </Grid>
        </SplitView.Content>
    </SplitView>

</Page>
