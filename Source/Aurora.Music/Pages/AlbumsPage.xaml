<Page
    x:Class="Aurora.Music.Pages.AlbumsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aurora.Music.Pages"
    xmlns:vm="using:Aurora.Music.ViewModels"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:controls="using:Aurora.Music.Controls"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
            </NavigationThemeTransition>
            <EntranceThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <Page.DataContext>
        <vm:AlbumsPageViewModel x:Name="Context"/>
    </Page.DataContext>

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light" Source="../Themes/Light.xaml"/>
                <ResourceDictionary x:Key="Dark" Source="../Themes/Dark.xaml"/>
            </ResourceDictionary.ThemeDictionaries>
            
            <CollectionViewSource Source="{x:Bind Context.AlbumList, Mode=OneWay}" IsSourceGrouped="True" x:Key="AlbumListSource" x:Name="AlbumListSource"/>

            <DataTemplate x:Key="NormalAlbumItem" x:DataType="vm:AlbumViewModel">
                <Grid PointerEntered="StackPanel_PointerEntered" PointerCanceled="StackPanel_PointerExited"
                           PointerExited="StackPanel_PointerExited" PointerCaptureLost="StackPanel_PointerExited"
                           PointerPressed="StackPanel_PointerPressed" 
                           PointerReleased="StackPanel_PointerReleased">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.Resources>
                        <Storyboard x:Key="Normal">
                            <DoubleAnimation Storyboard.TargetName="Shadow" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="BlurRadius" EnableDependentAnimation="True"
                                   To="16">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="FloatPanel" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="Opacity" EnableDependentAnimation="True"
                                   To="0">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="FloatPanel" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="Height" EnableDependentAnimation="True"
                                   To="0">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                        <Storyboard x:Key="PointerOver">
                            <DoubleAnimation Storyboard.TargetName="Shadow" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="BlurRadius" EnableDependentAnimation="True"
                                   To="24">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="FloatPanel" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="Opacity" EnableDependentAnimation="True"
                                   To="1">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="FloatPanel" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="Height" EnableDependentAnimation="True"
                                   To="36">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                        <Storyboard x:Key="PointerPressed">
                            <DoubleAnimation Storyboard.TargetName="Shadow" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="BlurRadius" EnableDependentAnimation="True"
                                   To="0">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </Grid.Resources>
                    <toolkit:DropShadowPanel Margin="8,4" x:Name="Shadow" BlurRadius="16" ShadowOpacity="0.5" OffsetX="0" OffsetY="0"
                                             Color="{ThemeResource SystemBaseHighColor}">
                        <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
                            <toolkit:ImageEx x:Name="Artwork" Style="{ThemeResource QuickLoadImageEx}" Stretch="UniformToFill" 
                                             PlaceholderStretch="Uniform" HorizontalAlignment="Center"
                                             PlaceholderSource="/Assets/Images/placeholder_b.png" VerticalAlignment="Center" 
                                             Height="160" Width="160">
                                <toolkit:ImageEx.Source>
                                    <BitmapImage UriSource="{x:Bind Artwork,Mode=OneWay, TargetNullValue=ms-appx:///Assets/Images/placeholder_b.png}"/>
                                </toolkit:ImageEx.Source>
                            </toolkit:ImageEx>
                        </Grid>
                    </toolkit:DropShadowPanel>
                    <StackPanel Margin="8,4" Grid.Row="1" Orientation="Vertical">
                        <TextBlock x:Name="AlbumName" MaxLines="1" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Text="{x:Bind Name}" 
                               Style="{ThemeResource BaseTextBlockStyle}" Padding="4,0" Width="160"/>
                        <TextBlock MaxLines="1" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="160" 
                               Text="{x:Bind AlbumArtists[0], FallbackValue=}" Style="{ThemeResource BodyTextBlockStyle}" 
                               Padding="4,0"/>
                    </StackPanel>
                    <Grid Grid.Row="0" Opacity="0" x:Name="FloatPanel" Height="0" Margin="8,4" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#80000000"/>
                                <GradientStop Color="#00000000" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Click="PlayAlbum_Click"  Style="{ThemeResource NoBorderButton}" Foreground="{ThemeResource SystemControlForegroundAltHighBrush}" Background="{ThemeResource SystemControlBackgroundBaseMediumLowRevealBaseLowBackgroundBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <Button.Content>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE102;" />
                            </Button.Content>
                        </Button>
                        <Button Click="Flyout_Click" Style="{ThemeResource NoBorderButton}" Grid.Column="1" Foreground="{ThemeResource SystemControlForegroundAltHighBrush}" Background="{ThemeResource SystemControlBackgroundBaseMediumLowRevealBaseLowBackgroundBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <Button.Content>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE712;" />
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="NarrowAlbumItem" x:DataType="vm:AlbumViewModel">
                <Grid PointerEntered="StackPanel_PointerEntered" PointerCanceled="StackPanel_PointerExited"
                           PointerExited="StackPanel_PointerExited" PointerCaptureLost="StackPanel_PointerExited"
                           PointerPressed="StackPanel_PointerPressed" 
                           PointerReleased="StackPanel_PointerReleased">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.Resources>
                        <Storyboard x:Key="Normal">
                            <DoubleAnimation Storyboard.TargetName="Shadow" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="BlurRadius" EnableDependentAnimation="True"
                                   To="8">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="FloatPanel" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="Opacity" EnableDependentAnimation="True"
                                   To="0">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="FloatPanel" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="Height" EnableDependentAnimation="True"
                                   To="0">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                        <Storyboard x:Key="PointerOver">
                            <DoubleAnimation Storyboard.TargetName="Shadow" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="BlurRadius" EnableDependentAnimation="True"
                                   To="16">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="FloatPanel" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="Opacity" EnableDependentAnimation="True"
                                   To="1">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="FloatPanel" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="Height" EnableDependentAnimation="True"
                                   To="24">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                        <Storyboard x:Key="PointerPressed">
                            <DoubleAnimation Storyboard.TargetName="Shadow" Duration="0:0:0.48"
                                   Storyboard.TargetProperty="BlurRadius" EnableDependentAnimation="True"
                                   To="0">
                                <DoubleAnimation.EasingFunction>
                                    <QuinticEase/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </Grid.Resources>
                    <toolkit:DropShadowPanel Margin="4,4" x:Name="Shadow" BlurRadius="8" ShadowOpacity="0.5" OffsetX="0" OffsetY="0"
                                             Color="{ThemeResource SystemBaseHighColor}">
                        <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
                            <toolkit:ImageEx x:Name="Artwork" Style="{ThemeResource QuickLoadImageEx}" Stretch="UniformToFill" 
                                             PlaceholderStretch="Uniform" HorizontalAlignment="Center"
                                             PlaceholderSource="/Assets/Images/placeholder_b.png" VerticalAlignment="Center" 
                                             Height="120" Width="120">
                                <toolkit:ImageEx.Source>
                                    <BitmapImage UriSource="{x:Bind Artwork,Mode=OneWay, TargetNullValue=ms-appx:///Assets/Images/placeholder_b.png}"/>
                                </toolkit:ImageEx.Source>
                            </toolkit:ImageEx>
                        </Grid>
                    </toolkit:DropShadowPanel>
                    <StackPanel Margin="4,4" Grid.Row="1" Orientation="Vertical">
                        <TextBlock x:Name="AlbumName" MaxLines="1" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Text="{x:Bind Name}" 
                               Style="{ThemeResource BaseTextBlockStyle}" Padding="4,0" Width="120"/>
                        <TextBlock MaxLines="1" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Width="120" 
                               Text="{x:Bind AlbumArtists[0], FallbackValue=}" Style="{ThemeResource BodyTextBlockStyle}" 
                               Padding="4,0"/>
                    </StackPanel>
                    <Grid Grid.Row="0" Opacity="0" x:Name="FloatPanel" Height="0" Margin="4,4" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#80000000"/>
                                <GradientStop Color="#00000000" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Click="PlayAlbum_Click" Style="{ThemeResource NoBorderButton}" Foreground="{ThemeResource SystemControlForegroundAltHighBrush}" Background="{ThemeResource SystemControlBackgroundBaseMediumLowRevealBaseLowBackgroundBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <Button.Content>
                                <FontIcon FontSize="15" FontFamily="Segoe MDL2 Assets" Glyph="&#xE102;" />
                            </Button.Content>
                        </Button>
                        <Button Click="Flyout_Click" Style="{ThemeResource NoBorderButton}" Grid.Column="1" Foreground="{ThemeResource SystemControlForegroundAltHighBrush}" Background="{ThemeResource SystemControlBackgroundBaseMediumLowRevealBaseLowBackgroundBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <Button.Content>
                                <FontIcon FontSize="15" FontFamily="Segoe MDL2 Assets" Glyph="&#xE712;" />
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="HeaderGroup.Margin" Value="48,32"/>
                        <Setter Target="AlbumList.Padding" Value="0,0,0,160"/>
                        <Setter Target="AlbumList.ItemTemplate" Value="{StaticResource NarrowAlbumItem}"/>
                        <Setter Target="GroupStyle.HeaderTemplate" Value="{StaticResource NarrowGroupHeader}"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Medium">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="641"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="HeaderGroup.Margin" Value="32"/>
                        <Setter Target="AlbumList.Padding" Value="16,0,16,160"/>
                        <Setter Target="AlbumList.ItemTemplate" Value="{StaticResource NormalAlbumItem}"/>
                        <Setter Target="GroupStyle.HeaderTemplate" Value="{StaticResource NormalGroupHeader}"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Full">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1008"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="HeaderGroup.Margin" Value="32"/>
                        <Setter Target="AlbumList.Padding" Value="32,0,32,160"/>
                        <Setter Target="GroupStyle.HeaderTemplate" Value="{StaticResource NormalGroupHeader}"/>
                        <Setter Target="GroupStyle.HeaderTemplate" Value="{StaticResource NormalGroupHeader}"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <SemanticZoom x:Name="Root">
            <SemanticZoom.ZoomedOutView>
                <GridView Padding="64,128,64,0" FontSize="20" ItemsSource="{x:Bind AlbumListSource.View.CollectionGroups, Mode=OneWay}">
                    <GridView.Header>
                        <Grid Height="280"/>
                    </GridView.Header>
                    <GridView.Footer>
                        <Grid Height="160"/>
                    </GridView.Footer>
                </GridView>
            </SemanticZoom.ZoomedOutView>

            <SemanticZoom.ZoomedInView>
                <GridView animations:ReorderGridAnimation.Duration="360" ShowsScrollingPlaceholders="True" ItemClick="AlbumList_ItemClick" IsSynchronizedWithCurrentItem="False" IsItemClickEnabled="True" 
              SelectionMode="None" ItemsSource="{x:Bind AlbumListSource.View, Mode=OneWay}" Loaded="AlbumList_Loaded"
                          ContextRequested="AlbumList_ContextRequested" ContextCanceled="AlbumList_ContextCanceled"
              Padding="32,0,32,160" ItemContainerStyle="{StaticResource GeneralGridViewItemStyle}" ItemTemplate="{StaticResource NormalAlbumItem}"
              Style="{StaticResource GeneralGridViewStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
              x:Name="AlbumList">
                    <GridView.GroupStyle>
                        <GroupStyle x:Name="GroupStyle" HeaderTemplate="{StaticResource NormalGroupHeader}"/>
                    </GridView.GroupStyle>
                    <GridView.Header>
                        <Grid Height="400"/>
                    </GridView.Header>
                </GridView>
            </SemanticZoom.ZoomedInView>
        </SemanticZoom>
        <Grid Height="360" x:Name="Header" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Grid x:Name="BGBlur" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="360" 
                  Background="{ThemeResource SystemControlAltTranslucentAcrylicElementBrush}"/>
            <ParallaxView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="360" VerticalShift="-360" Source="{x:Bind AlbumList}">
                <controls:ImageGrid x:Name="HeaderBG" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                        BorderBrush="{x:Null}" BorderThickness="0"  
                                        ImageSources="{x:Bind Context.HeroImage, Mode=OneWay}"/>
            </ParallaxView>

            <Grid x:Name="HeaderBGOverlay" HorizontalAlignment="Stretch" Height="360" Background="{ThemeResource ArtistsPageGradient}"/>
            <Grid x:Name="HeaderGroup" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid Canvas.ZIndex="9999" x:Name="TitleShrink" Background="{x:Null}"
                          HorizontalAlignment="Left" VerticalAlignment="Center" Height="48">
                    <TextBlock x:Uid="Albums" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" Margin="12,0" Text="Albums" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                   TextWrapping="NoWrap" MaxLines="1" Style="{ThemeResource SubheaderTextBlockStyle}" 
                                   TextTrimming="Clip"/>
                </Grid>
                <Grid Canvas.ZIndex="9999" x:Name="Title" Background="{ThemeResource SystemControlBackgroundAccentBrush}" 
                          HorizontalAlignment="Left" VerticalAlignment="Center" Height="48">
                    <TextBlock x:Uid="Albums" Foreground="{ThemeResource SystemControlForegroundAltHighBrush}" Margin="12,0" Text="Albums" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                   TextWrapping="NoWrap" MaxLines="1" Style="{ThemeResource SubheaderTextBlockStyle}" 
                                   TextTrimming="Clip"/>
                </Grid>
                <StackPanel Grid.Row="1" x:Name="Details" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,8">
                    <Grid VerticalAlignment="Bottom" Margin="0,0,4,0" 
                              Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" 
                                       Foreground="{ThemeResource SystemControlForegroundAltHighBrush}" 
                                       Text="{x:Bind Context.ArtistsCount,Mode=OneWay}" Margin="12,8"/>
                    </Grid>
                    <Grid VerticalAlignment="Center" Margin="4,0,4,0" 
                              Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" 
                                       Foreground="{ThemeResource SystemControlForegroundAltHighBrush}" 
                                       Text="{x:Bind Context.SongsCount,Mode=OneWay}" Margin="12,8"/>
                    </Grid>
                </StackPanel>
            </Grid>
            <StackPanel Height="48" HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="32,0">
                <Button Margin="8,0" Command="{x:Bind Context.PlayAll}" Style="{ThemeResource PlayAllButton}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox x:Uid="SortBox" x:Name="SortBox" Margin="8,0" BorderBrush="{x:Null}" 
                          SelectedIndex="0" BorderThickness="0" Style="{StaticResource HorizontalComboBox}" 
                          HorizontalAlignment="Left" VerticalAlignment="Center" Header="Sort by:">
                    <ComboBoxItem x:Uid="Year" Content="Year" Tag="Year"/>
                    <ComboBoxItem x:Uid="TitleSort" Content="A-Z" Tag="Name"/>
                    <ComboBoxItem x:Uid="Artist" Content="Artist" Tag="Artists"/>
                </ComboBox>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
