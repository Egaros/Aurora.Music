<Page
    x:Class="Aurora.Music.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aurora.Music.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollMode="Disabled">
        <StackPanel Orientation="Vertical" Margin="64,80,64,160" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Viewbox Margin="12,0" MaxHeight="120" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Stretch="Uniform">
                    <Image.Source>
                        <SvgImageSource UriSource="/Assets/logo.svg"/>
                    </Image.Source>
                </Image>
            </Viewbox>
            <TextBlock Text="Aurora Studio" Style="{ThemeResource SubheaderTextBlockStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12,0">
            </TextBlock>
            <TextBlock Text="and Supported by:" Style="{ThemeResource BodyTextBlockStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12,0,12,12"/>
            <TextBlock TextAlignment="Center" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12" Text="Microsoft.Toolkit.Uwp&#xD;&#xA;Newtonsoft.Json&#xD;&#xA;ksemenenko.ColorThief&#xD;&#xA;WriteableBitmapEx&#xD;&#xA;Win2D.uwp&#xD;&#xA;ExpressionBuilder&#xD;&#xA;Taglib.Sharp&#xD;&#xA;LrcParser"/>
        </StackPanel>
    </ScrollViewer>
</Page>
